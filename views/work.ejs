<%- include("./partials/header.ejs") %>

<form action="./workSave" method="post">
<div class="d-flex flex-column flex-md-row p-4 gap-4 py-md-5 align-items-center justify-content-center">
  <div class="list-group">
    <label class="list-group-item d-flex gap-3 head">
      <h1>Work List</h1>
    </label>
    <label class="list-group-item d-flex gap-3">
      <input type="text" name="workName" class="form-control" placeholder="New Task" aria-label="Example text with button addon" required="required" aria-describedby="button-addon1">
      <button class="btn btn-outline-secondary" type="submit" id="button-addon1">+</button>
    </label>
    <% if(locals.liste){ %> <% for (let i = 0; i < liste.length; i++) { %>
    <label class="list-group-item d-flex gap-3">
      <input class="form-check-input flex-shrink-0" type="checkbox" value="" style="font-size: 1.375em;">
      <p><%= locals.liste[i] %></p>
      </span>
    </label>
    <% }} %>
  </div>
</div>
</form>


<script
  src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
  crossorigin="anonymous"
></script>
